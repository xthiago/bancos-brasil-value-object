root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{twig,json}]
indent_size = 2

[composer.json]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.js]
indent_size = 2
max_line_length = 100

[*.css]
tab_width = 2

[*.md]
indent_size = 2
